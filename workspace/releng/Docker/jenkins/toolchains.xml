<?xml version="1.0" encoding="UTF8"?>
<!-- needs to be placed in the ${user.home}/.m2 directory see: http://maven.apache.org/guides/mini/guide-using-toolchains.html -->
<toolchains>
  <!-- JDK toolchains -->
  <toolchain>
    <type>jdk</type>
    <provides>
      <version>1.7</version>
    </provides>
    <configuration>
      <jdkHome>/usr/lib/jvm/java-7-openjdk-amd64</jdkHome>
    </configuration>
  </toolchain>
</toolchains>